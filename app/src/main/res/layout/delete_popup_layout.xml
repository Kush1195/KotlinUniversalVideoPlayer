<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup"
        android:orientation="vertical"
        android:layout_width="869px"
        android:layout_height="520px"
        android:background="@drawable/delete_popup">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_6sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="Do You Want To Delete \nThis Video?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/yes"
                    android:src="@drawable/yes_press_unpress"
                    android:layout_width="247px"
                    android:layout_height="102px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingRight="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/no"
                    android:src="@drawable/no_press_unpress"
                    android:layout_width="247px"
                    android:layout_height="102px"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>